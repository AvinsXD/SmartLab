<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Password">

    <TextView

        android:id="@+id/textView4"
        android:layout_width="360dp"

        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Создайте пароль"
        android:textColor="@color/black"

        android:textSize="@dimen/bigTx"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="400sp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Для защиты ваших персональных данных"
        android:textColor="@color/opac_gray"
        android:textSize="@dimen/smallTx"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_marginTop="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <androidx.appcompat.widget.AppCompatButton
            android:tag="num1"
            android:id="@+id/num1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/cus_button_round"
            android:text="1"
            android:onClick="onClick"
            android:textColor="@color/text_color"
            android:textSize="@dimen/bigTx"
            android:textStyle="bold" />

        <Space
            android:layout_width="30dp"
            android:layout_height="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:tag="num2"
            android:id="@+id/num2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/cus_button_round"
            android:text="2"
            android:onClick="onClick"
            android:textColor="@color/text_color"
            android:textSize="@dimen/bigTx"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/num1" />

        <Space
            android:layout_width="30dp"
            android:layout_height="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:tag="num4"
            android:id="@+id/num3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/cus_button_round"
            android:text="3"
            android:onClick="onClick"
            android:textColor="@color/text_color"
            android:textSize="@dimen/bigTx"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/num2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <androidx.appcompat.widget.AppCompatButton
            android:tag="num4"
            android:textColor="@color/text_color"
            android:id="@+id/num4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/cus_button_round"
            android:text="4"
            android:onClick="onClick"
            android:textSize="@dimen/bigTx"
            android:textStyle="bold" />

        <Space
            android:layout_width="30dp"
            android:layout_height="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:tag="num5"
            android:textColor="@color/text_color"
            android:id="@+id/num5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/cus_button_round"
            android:text="5"
            android:onClick="onClick"
            android:textSize="@dimen/bigTx"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/num4" />

        <Space
            android:layout_width="30dp"
            android:layout_height="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:tag="num6"
            android:textColor="@color/text_color"
            android:id="@+id/num6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/cus_button_round"
            android:text="6"
            android:onClick="onClick"
            android:textSize="@dimen/bigTx"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/num5" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <androidx.appcompat.widget.AppCompatButton
            android:tag="num7"
            android:id="@+id/num7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/cus_button_round"
            android:text="7"
            android:onClick="onClick"
            android:textColor="@color/text_color"
            android:textSize="@dimen/bigTx"
            android:textStyle="bold" />

        <Space
            android:layout_width="30dp"
            android:layout_height="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:tag="num8"
            android:id="@+id/num8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/cus_button_round"
            android:text="8"
            android:onClick="onClick"
            android:textColor="@color/text_color"
            android:textSize="@dimen/bigTx"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/num7" />

        <Space
            android:layout_width="30dp"
            android:layout_height="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:tag="num9"
            android:id="@+id/num9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/cus_button_round"
            android:text="9"
            android:onClick="onClick"
            android:textColor="@color/text_color"
            android:textSize="@dimen/bigTx"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/num8" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:tag="num0"
        android:id="@+id/num0"
        android:layout_width="90dp"
        android:layout_height="95dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/cus_button_round"
        android:text="0"
        android:onClick="onClick"
        android:textColor="@color/text_color"
        android:textSize="@dimen/bigTx"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <ImageView
            android:tag="cir1"
            android:id="@+id/cir1"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:src="@mipmap/ellipse_58" />

        <ImageView
            android:tag="cir2"
            android:id="@+id/cir2"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:src="@mipmap/ellipse_58" />

        <ImageView
            android:tag="cir3"
            android:id="@+id/cir3"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:src="@mipmap/ellipse_58" />

        <ImageView
            android:tag="cir4"
            android:id="@+id/cir4"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:src="@mipmap/ellipse_58" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/delBt"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        android:contentDescription="a"
        android:onClick="onClick"
        android:scaleType="fitXY"
        android:src="@mipmap/del_icon"
        android:tag="delBt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/num0"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />
</androidx.constraintlayout.widget.ConstraintLayout>